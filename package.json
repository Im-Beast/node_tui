{
  "name": "node_tui",
  "version": "0.0.2",
  "description": "Package for creating Terminal User Interfaces",
  "main": "mod.js",
  "type": "module",
  "exports": {
    ".": "./"
  },
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "demo": "tsx examples/demo.ts",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Im-Beast/node_tui.git"
  },
  "keywords": [
    "typescript",
    "tui",
    "console",
    "terminal",
    "ts",
    "js",
    "node"
  ],
  "author": "Im-Beast",
  "license": "BEL",
  "bugs": {
    "url": "https://github.com/Im-Beast/node_tui/issues"
  },
  "homepage": "https://github.com/Im-Beast/node_tui#readme",
  "devDependencies": {
    "crayon.js": "^3.3.3",
    "prettier": "3.0.2",
    "tsx": "^3.12.7"
  },
  "dependencies": {
    "@types/node": "^20.5.6",
    "ava": "^5.3.1"
  },
  "ava": {
    "extensions": [
      "ts",
      "js"
    ],
    "nodeArguments": [
      "--loader=tsx"
    ]
  }
}
